@{
	Layout="_Layout2";
}
@model LoginViewModel

@section Scripts{
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}

@section Style{
    <style>
        
			html,body{
			
			background-size: cover;
			background-repeat: no-repeat;
			height: 100%;
			font-family: 'Numans', sans-serif;
			background: rgb(2,0,36);
			background: linear-gradient(90deg, rgba(2,0,36,1) 0%, rgba(9,9,121,1) 100%);

			}

			.container{
				height: 80vh;
				align-content: center;
			}


			.card{
			
				margin-top: auto;
				margin-bottom: auto;
				width: 400px;
				background-color: rgba(0,0,0,0.5) !important;
			}
			.neon-wrapper {
			  box-shadow:
			  0 0 0.1vw  0.4vw #fff7f7,   
			  0 0 0.4vw  0.6vw #e97272, 
			  0 0   4vw  0.4vw #e50b0b,

			  inset 0 0 1.5vw  0.4vw #e50b0b,
			  inset 0 0 0.4vw  0.2vw #e97272,
			  inset 0 0 0.5vw  0.2vw #fff7f7;
			  border-radius: 1.5rem;
			}


			.input-group-prepend span{
				width: 50px;
				background-color: #FFC312;
				color: black;
				border:0 !important;
			}

			input:focus{
			outline: 0 0 0 0  !important;
			box-shadow: 0 0 0 0 !important;

			}

			

			.login_btn{
				color: black;
				background-color: #FFC312;
				opacity:0.9;
				width: 100px;
			}

			.login_btn:hover{
				color: black;
				opacity:1;
			}

			.links{
				color: white;
			}

			.links a{
				margin-left: 4px;
			}
    </style>
}
<div class="container ">
	<div class="d-flex justify-content-center h-100">
		<div class="card m-auto">
			<div class="card-header">
				<h3 class="links">Giriş</h3>
			</div>
			<div class="card-body">
				<form method="post" asp-action="Login" asp-controller="Account">
					<div class="mt-2">
						<label class="form-label links" asp-for=Email></label>
						<div class="input-group form-group">
							<div class="input-group-prepend">
								<span class="input-group-text"><i class="fas fa-user"></i></span>
							</div>
							<input type="text" asp-for="Email" class="form-control" placeholder="E-mail">
						</div>
						<span asp-validation-for="Email" class="text-danger"></span> 
					</div>
					<div class="mt-2">
						<label class="form-label links" asp-for=Password></label>
						<div class="input-group form-group">
							<div class="input-group-prepend">
								<span class="input-group-text"><i class="fas fa-key"></i></span>
							</div>
							<input type="password" asp-for="Password"  class="form-control" placeholder="Şifre">
						</div>
						<span asp-validation-for="Password" class="text-danger"></span>  
					</div>
					<div class="form-group">
						<button type="submit"  class="btn float-right login_btn" >Giriş</button>
					</div>
				</form>
				<div class="d-flex justify-content-center links">
					Yeni bir hesap<a href="/register">Kayıt</a>
				</div>
				<div class="d-flex justify-content-center links">
					<a asp-controller="Account"  asp-action="ForgotPassword">Şifremi Unuttum</a>
				</div>
			</div>
		
		</div>
	</div>
</div>