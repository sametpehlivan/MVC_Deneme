@model List<Product>
@section Header{
    @await Html.PartialAsync("_header");
}
@section Style{
    <style>
        .card
        {
           box-shadow: rgba(0, 0, 0, 0.24) 0px 3px 8px;
        }
    </style>
    
}


<div class="col-md-12">

    @if(Model.Count > 0)
    {
        <div class ="row m-1">
                @foreach(var p in Model)
                {
                    <div class="col-md-4"> 
                        @await Html.PartialAsync("_card",p)
                    </div>
                }
        </div>
    }
    else
    {
       <partial name="_error"/>
    }

</div>

