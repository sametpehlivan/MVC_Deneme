@model RoleViewModel

<div class="col-md-12 card">  
    <div class="card-header bg-dark text-white text-uppercase">  
        <h4>Rol Oluşturma Sayfası</h4>  
    </div>  
    <div class="card-body ">  
        <form asp-controller="Admin" asp-action="CreateRole" enctype="multipart/form-data">  
        <div class="row">
            <div class="col-md-8">
                <div class="row">  
                    <div class="col-md-6">  
                        <div class="form-group">  
                            <label asp-for="roleName" class="lable-control"></label>  
                            <input asp-for="roleName" class="form-control" />  
                            <span asp-validation-for="roleName" class="text-danger"></span>  
                        </div>  
                    </div>      
                </div>  
            </div>
        </div>
        <div class="form-group">  
            <button type="submit" class="btn btn-primary rounded-0">Kaydet</button>  
            <button type="button" class="btn btn-danger rounded-0" href="/admin/role">İptal</button> 
        </div>
        </form>  
    </div>  
</div>
@section Scripts{
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}  