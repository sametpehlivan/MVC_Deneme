@model ProductModel

<div class="col-md-12 card m-3">  
    <div class="card-header bg-dark text-white text-uppercase">  
        <h4>Edit Category</h4>  
    </div>  
    <div class="card-body ">  
        <form method="post" asp-controller="Admin" asp-action="CategoryEdit" enctype="multipart/form-data">  
        <div class="row">
            <div class="col-md-8">
                <input type="hidden" asp-for="@Model.Id"/>
                <div class="row">  
                    <div class="col-md-6">  
                        <div class="form-group">  
                            <label asp-for="Name" class="lable-control"></label>  
                            <input asp-for="Name" class="form-control" />  
                            <span asp-validation-for="Name" class="text-danger"></span>  
                        </div>  
                    </div>      
                </div>  
            </div>
        </div>
        <div class="form-group">  
            <button type="submit" class="btn btn-primary rounded-0">Submit</button> 
            <button type="button" class="btn btn-danger rounded-0" href="/admin/category">İptal</button> 
        </div>
        </form>  
    </div>  
</div>  
@section Scripts{
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}