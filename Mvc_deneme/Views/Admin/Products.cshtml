@model List<Product>
@section Style{
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.6.0/css/bootstrap.min.css"/>
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs4-4.6.0/jszip-2.5.0/dt-1.12.0/af-2.4.0/b-2.2.3/b-colvis-2.2.3/b-html5-2.2.3/b-print-2.2.3/cr-1.5.6/date-1.1.2/fc-4.1.0/fh-3.2.3/kt-2.7.0/r-2.3.0/rg-1.2.0/rr-1.2.8/sc-2.0.6/sb-1.3.3/sp-2.0.1/sl-1.4.0/sr-1.1.1/datatables.min.css"/>
 }
@section Scripts{
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.36/pdfmake.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.36/vfs_fonts.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/v/bs4-4.6.0/jszip-2.5.0/dt-1.12.0/af-2.4.0/b-2.2.3/b-colvis-2.2.3/b-html5-2.2.3/b-print-2.2.3/cr-1.5.6/date-1.1.2/fc-4.1.0/fh-3.2.3/kt-2.7.0/r-2.3.0/rg-1.2.0/rr-1.2.8/sc-2.0.6/sb-1.3.3/sp-2.0.1/sl-1.4.0/sr-1.1.1/datatables.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.6.0/js/bootstrap.min.js"></script>
    <script>
        $(document).ready(function() {
            $('#table').DataTable();
        } );
    </script>
}
<div class="col-md-12">
    <h2>
        Ürün Yönetim Sayfası
    </h2>   
    <a class="btn btn-primary btn-sm" href="/create/product"> Ürün oluştur </a>
    <hr />
    <div class="">
        <table class="table table-dark"  id="table">
          <thead>
            <tr>
              <th>#</th>
              <th>Ürün Url</th>
              <th>Ürün Adı</th>
              <th>Ürün Fiyat</th>
              <th>Ürün Stok Sayısı</th>
              <th>Ürün Oluşturulma Tarihi</th>
              <th>Ürünü Oluşturan Kullanıcı</th>
              <th>Düzenle/Sil</th>
            </tr>
          </thead>
          <tbody>
             @if (Model.Count > 0)
            {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td><img src="~/lib/img/product/@(item.ImageUrl + ".jpg")" style="width:50px" /></td>
                            <td>@item.Url</td>
                            <td>@item.Name</td>
                            <td>@item.Price</td>
                            <td>@item.StockQuantity </td>
                            <td>@item.CreateDateTime</td>
                            <td>@(item.CreateUserName.ToLower() == "undifined" ? "Bilinmeyen":item.CreateUserName)</td>
                            <td>
                                <a class="btn btn-sm btn-warning" href="/product/edit/@item.Id">
                                    <i class="fa-solid fa-pen-to-square"></i> Düzenle
                                </a>

                                <a class= "btn btn-sm btn-danger" href="/delete/product/@item.Id">
                                    <i class="fa-solid fa-circle-minus" ></i> Sil
                                </a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                   <partial name="_error"/>
                }

          </tbody>
      </table>
    </div>
</div>

