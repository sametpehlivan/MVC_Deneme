@model Product

<div class="card my-2 product" style="width:20rem;">
   <div class="d-flex justify-content-center">
        <div style="width:14rem" >
            <div style="height:16rem;">
                <img src="~/lib/img/product/@(Model.ImageUrl.ToString() + ".jpg")" class="card-img-top"  />
            </div>
        </div>
    </div>
    <hr />
    <div class="text-center">
        <div class="card-body rounded-0 ">
             <div class="col-md-12 my-3">
                        <span class="h5">@Model.Name </span>
                        <span class="float-right" style="color:#d64161;"> <strong>@Model.Price ₺ </strong></span>
            </div>
            <p> @Html.Raw(Model.Description) </p>
        </div>
        
       
        <div class="">
            <ul class="list-group list-group-flush">
                <li class="list-group-item border-0 ">
                    @for (var i=0; i<Model.Stars; i++)
                    {
                         <i class="fa fa-star"></i>
                    }
                    <small class="text-muted" id="stars_value">(@Model.Stars)</small>
                    <small class="text-muted float-md-right" id="stars_value"><i class="fa-solid fa-users"></i> (@Model.UserVote)</small>
                </li>
            </ul>
            @if (@Model.StockQuantity > 0)
            {
                <div class="m-1">
                        <a  href="/product/details/@(Model.Id)"  class="btn border-0 rounded-0 col-md-10 my-0 btn-primary"  >
                            <i class="fa fa-info-circle" ></i> Detay
                        </a>
                </div>
                <div class="m-1">
                    <form asp-controller="Cart" asp-action="AddCart" style="display:inline" method="post" class="form-input">
                      
                        <button type="submit"  class="btn border-0 rounded-0 col-md-10 my-0" style="background-color:#d64161;color:white;"  >
                            <i class="fa-solid fa-cart-arrow-down"></i> Sepete Ekle
                        </button>
                        <input type="hidden"  name="productId" value="@Model.Id">
                        <input type="hidden"  name="quantity" value="1">
                    </form>
                    
                </div>
            }
            else
            {
               
                <div class="bg-danger p-2 my-1  text-white col-12">
                    <a>Ürün Mevcut Değil</a>
                </div>
            }

        </div>
    </div>
</div>


